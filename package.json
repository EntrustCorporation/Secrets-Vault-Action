{
  "name": "secrets-vault-action",
  "version": "1.0.0",
  "description": "GitHub Action to fetch secrets from a Entrust Keycontrol Vault",
  "main": "src/entry.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "ncc build src/entry.js -o dist",
    "test": "npx jest --verbose",
    "test:watch": "npx jest --watch",
    "test:coverage": "npx jest --coverage",
    "test:ci": "npx jest --ci --reporters=default --reporters=jest-junit",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:token": "TEST_TYPE=token jest --config jest.integration.config.js",
    "test:integration:userpass": "TEST_TYPE=userpass jest --config jest.integration.config.js"
  },
  "keywords": [
    "github",
    "actions",
    "entrust",
    "hytrust",
    "keycontrol",
    "vault",
    "secrets"
  ],
  "author": "Entrust Corporation",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "axios": "^1.3.4"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.36.1",
    "dotenv": "^16.0.3",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/test/**/*.js"]
  }
}
